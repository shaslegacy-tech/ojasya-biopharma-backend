{
  "info": {
    "name": "Ojasya Biopharma API - with Tests & Auto-vars",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection with test scripts that save ids and tokens into the environment variables (productId, hospitalId, orderId, supplierId, jwt)."
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8000/api/v1", "type": "text" },
    { "key": "jwt", "value": "", "type": "string" },
    { "key": "productId", "value": "", "type": "string" },
    { "key": "hospitalId", "value": "", "type": "string" },
    { "key": "orderId", "value": "", "type": "string" },
    { "key": "supplierId", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/auth/register", "host": ["{{baseUrl}}"], "path": ["auth", "register"] },
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Admin\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"Password123!\",\n  \"role\": \"admin\"\n}" }
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"] },
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Password123!\"\n}" }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json ? pm.response.json() : null;",
                  "if (res && res.user) {",
                  "  // if response returns user object inside data or user",
                  "  // sometimes token is set as cookie; check cookies too",
                  "}",
                  "// Try to get token from response body (if any)",
                  "try {",
                  "  const body = pm.response.json();",
                  "  if (body.token) { pm.environment.set('jwt', body.token); }",
                  "  if (body.user && body.user.token) { pm.environment.set('jwt', body.user.token); }",
                  "} catch(e) {}",
                  "// Try to extract cookie named 'token'",
                  "pm.cookies.each(cookie => { if (cookie.name === 'token') pm.environment.set('jwt', cookie.value); });",
                  "// If still not found, look for Authorization header in response (rare)",
                  "const authHeader = pm.response.headers.get('authorization');",
                  "if (authHeader && authHeader.startsWith('Bearer ')) { pm.environment.set('jwt', authHeader.replace('Bearer ', '')); }",
                  "pm.test('Status code is 200 or 201', function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Me (current user)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }],
            "url": { "raw": "{{baseUrl}}/auth/me", "host": ["{{baseUrl}}"], "path": ["auth", "me"] }
          }
        },
        { "name": "Logout", "request": { "method": "POST", "url": { "raw": "{{baseUrl}}/auth/logout", "host": ["{{baseUrl}}"], "path": ["auth", "logout"] } } }
      ]
    },
    {
      "name": "Products",
      "item": [
        { "name": "List products", "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/products", "host": ["{{baseUrl}}"], "path": ["products"] } } },
        {
          "name": "Create product",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwt}}" }],
            "url": { "raw": "{{baseUrl}}/products", "host": ["{{baseUrl}}"], "path": ["products"] },
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Paracetamol 500mg\",\n  \"genericName\": \"Paracetamol\",\n  \"brand\": \"Ojasya\",\n  \"category\": \"Medicine\",\n  \"mrp\": 50,\n  \"tradePrice\": 40,\n  \"unit\": \"tablet\"\n}" }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Created product', function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); });",
                  "try { const body = pm.response.json(); const id = body._id || body.id || body.data && body.data._id || body.data && body.data.id; if (id) pm.environment.set('productId', id); } catch(e) {}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        { "name": "Get product by id", "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/products/:id", "host": ["{{baseUrl}}"], "path": ["products", ":id"] } } },
        {
          "name": "Update product",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwt}}" }],
            "url": { "raw": "{{baseUrl}}/products/:id", "host": ["{{baseUrl}}"], "path": ["products", ":id"] },
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Paracetamol 500mg - Updated\",\n  \"mrp\": 55\n}" }
          }
        },
        { "name": "Delete product", "request": { "method": "DELETE", "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }], "url": { "raw": "{{baseUrl}}/products/:id", "host": ["{{baseUrl}}"], "path": ["products", ":id"] } } }
      ]
    },
    {
      "name": "Inventory",
      "item": [
        { "name": "List inventory", "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/inventory", "host": ["{{baseUrl}}"], "path": ["inventory"] } } },
        {
          "name": "Create inventory",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwt}}" }],
            "url": { "raw": "{{baseUrl}}/inventory", "host": ["{{baseUrl}}"], "path": ["inventory"] },
            "body": { "mode": "raw", "raw": "{\n  \"product\": \"<PRODUCT_ID>\",\n  \"supplier\": \"<SUPPLIER_ID>\",\n  \"warehouse\": \"Main Warehouse\",\n  \"batchNo\": \"BATCH001\",\n  \"expiryDate\": \"2026-12-31\",\n  \"availableQty\": 100,\n  \"costPrice\": 25,\n  \"threshold\": 10\n}" }
          }
        },
        { "name": "Get inventory by id", "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/inventory/:id", "host": ["{{baseUrl}}"], "path": ["inventory", ":id"] } } }
      ]
    },
    {
      "name": "Hospitals",
      "item": [
        {
          "name": "List hospitals",
          "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }], "url": { "raw": "{{baseUrl}}/hospitals", "host": ["{{baseUrl}}"], "path": ["hospitals"] } }
        },
        {
          "name": "Create hospital",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwt}}" }],
            "url": { "raw": "{{baseUrl}}/hospitals", "host": ["{{baseUrl}}"], "path": ["hospitals"] },
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"City Hospital\",\n  \"email\": \"cityhospital@example.com\",\n  \"phone\": \"9876543210\",\n  \"contactPerson\": \"Dr. Rao\",\n  \"address\": \"123 Main St\"\n}" }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Created hospital', function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); });",
                  "try { const body = pm.response.json(); const id = body._id || body.id || body.data && body.data._id || body.data && body.data.id; if (id) pm.environment.set('hospitalId', id); } catch(e) {}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        { "name": "Get hospital by id", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }], "url": { "raw": "{{baseUrl}}/hospitals/:id", "host": ["{{baseUrl}}"], "path": ["hospitals", ":id"] } } }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Place order",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwt}}" }],
            "url": { "raw": "{{baseUrl}}/orders", "host": ["{{baseUrl}}"], "path": ["orders"] },
            "body": { "mode": "raw", "raw": "{\n  \"customer\": \"<HOSPITAL_ID>\",\n  \"items\": [\n    {\n      \"product\": \"<PRODUCT_ID>\",\n      \"qty\": 10,\n      \"price\": 50\n    }\n  ],\n  \"source\": \"app\",\n  \"assignedSupplier\": \"<SUPPLIER_ID>\",\n  \"paymentStatus\": \"UNPAID\"\n}" }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Order created', function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); });",
                  "try { const body = pm.response.json(); const id = body._id || body.id || body.data && body.data._id || body.data && body.data.id; if (id) pm.environment.set('orderId', id); } catch(e) {}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        { "name": "Get orders", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }], "url": { "raw": "{{baseUrl}}/orders", "host": ["{{baseUrl}}"], "path": ["orders"] } } },
        { "name": "Get order by id", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }], "url": { "raw": "{{baseUrl}}/orders/:id", "host": ["{{baseUrl}}"], "path": ["orders", ":id"] } } },
        {
          "name": "Update order status",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{jwt}}" }],
            "url": { "raw": "{{baseUrl}}/orders/:id", "host": ["{{baseUrl}}"], "path": ["orders", ":id"] },
            "body": { "mode": "raw", "raw": "{\n  \"status\": \"accepted\"\n}" }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "List suppliers",
          "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }], "url": { "raw": "{{baseUrl}}/admin/suppliers", "host": ["{{baseUrl}}"], "path": ["admin", "suppliers"] } }
        },
        {
          "name": "Approve supplier",
          "request": { "method": "PUT", "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }], "url": { "raw": "{{baseUrl}}/admin/suppliers/:id/approve", "host": ["{{baseUrl}}"], "path": ["admin", "suppliers", ":id", "approve"] } },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Approve supplier status', function () { pm.expect(pm.response.code).to.be.oneOf([200,201,204]); });",
                  "try { const body = pm.response.json(); const id = body._id || body.id || body._id || body.id; if (id) pm.environment.set('supplierId', id); } catch(e) {}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        { "name": "List all orders (admin)", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }], "url": { "raw": "{{baseUrl}}/admin/orders", "host": ["{{baseUrl}}"], "path": ["admin", "orders"] } } }
      ]
    },
    {
      "name": "Utility (notifications, commissions)",
      "item": [
        { "name": "Get notifications (user)", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }], "url": { "raw": "{{baseUrl}}/notifications", "host": ["{{baseUrl}}"], "path": ["notifications"] } } },
        { "name": "Get commissions", "request": { "method": "GET", "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }], "url": { "raw": "{{baseUrl}}/commissions", "host": ["{{baseUrl}}"], "path": ["commissions"] } } }
      ]
    }
  ]
}