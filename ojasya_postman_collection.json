{
  "info": {
    "name": "Ojasya Biopharma API - Postman Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection to test Phase 1 API endpoints for Ojasya Biopharma. Replace {{baseUrl}} with your server URL (default http://localhost:8000/api/v1)."
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000/api/v1",
      "type": "text"
